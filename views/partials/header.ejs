               <% for(const game of games) { %>
                   <li><a href="/game/<%=game.name%>"><%=game.title%></a></li>
        <% } %>
        <% if(locals.user) { %>
        <li>
          <a href="/logout">DÃ©connexion</a>
        </li>
        <% } else { %>
